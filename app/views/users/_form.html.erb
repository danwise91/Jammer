<%= form_for(@user) do |f| %>

<div class="form">
  <div style= "width: 250px">
    <%= f.text_field :name, class: 'form-control', autofocus: true, placeholder: "Your Name"%><br>
  </div>
</div>

<div class="email">
  <div style="width: 250px">
    <%= f.text_field :email, class: 'form-control', autofocus: true, placeholder: "Your email"%><br>
  </div>
</div>

<div class="password">
  <div style="width 250px">
    <%= f.password_field :password, class: 'form-control', autofocus: true, placeholder: "Make between 8-15 characters"%><br>
  </div>
</div>

<div class="">
  <div style="width 250px">
    <%= f.password_field :password, class: 'form-control', autofocus: true, placeholder: "confirm"%><br>
  </div>
</div>

<div class="actions">
  <%= f.submit "Submit", class: "btn btn-primary", style: "width: 300px"%>
</div>
<%end%>
